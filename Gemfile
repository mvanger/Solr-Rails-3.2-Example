source 'https://rubygems.org'

gem 'rails', '3.2.9'

# This is for .env storing environmental variables
gem 'dotenv', :groups => [:development, :test]

# This is your database. Duh
gem 'sqlite3'

# This is for file upload
gem 'paperclip', :git => 'git://github.com/thoughtbot/paperclip.git'

# This is for Paperclip interfacing with S3
gem 'fog'

# This is your Sunspot stuff. Change this at your own risk
gem 'sunspot_solr', :git => "git://github.com/sunspot/sunspot.git"
gem "sunspot", "~> 1.3.3"
gem 'sunspot_rails', '~> 1.3.0'
gem 'sunspot_cell', :git => 'git://github.com/zheileman/sunspot_cell.git'
gem 'progress_bar' #This gives you progress bars for reindexing at the console

# Standard Rails assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Not really needed in this demo app, but here by default with Rails 3.2
gem 'jquery-rails'

